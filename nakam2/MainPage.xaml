                        </telerikPrimitives:RadSlideHubTile.Picture>
                    </telerikPrimitives:RadSlideHubTile>
                    <telerikPrimitives:RadSlideHubTile Title="Japanese &#xA;Food" FontSize="25" x:Name="hub3"  UpdateInterval="00:00:06" Width="150" Height="150" Margin="5,-350,5,0" Background="#FF8B5E3B" Tap="hub3_Tap">
                        <telerikPrimitives:RadSlideHubTile.Picture>
                            <Image Source="Images/Category/Japanese Food.jpg" Stretch="UniformToFill"/>
                        </telerikPrimitives:RadSlideHubTile.Picture>
                    </telerikPrimitives:RadSlideHubTile>
                    <telerikPrimitives:RadSlideHubTile Title="Western &#xA;Food" FontSize="25" x:Name="hub4"  UpdateInterval="00:00:09" Width="150" Height="150" Margin="-795,-30,5,0" Background="#FF8B5E3B" Tap="hub4_Tap">
                        <telerikPrimitives:RadSlideHubTile.Picture>
                            <Image Source="Images/Category/Western Food.jpg" Stretch="UniformToFill"/>
                        </telerikPrimitives:RadSlideHubTile.Picture>
                    </telerikPrimitives:RadSlideHubTile>
                    <telerikPrimitives:RadSlideHubTile Title="Fast Food" FontSize="25" x:Name="hub5"  UpdateInterval="00:00:08" Width="150" Height="150" Margin="-475,-30,5,0" Background="#FF8B5E3B" Tap="hub5_Tap">
                        <telerikPrimitives:RadSlideHubTile.Picture>
                            <Image Source="Images/Category/Fast Food.jpg" Stretch="UniformToFill"/>
                        </telerikPrimitives:RadSlideHubTile.Picture>
                    </telerikPrimitives:RadSlideHubTile>
                    <telerikPrimitives:RadSlideHubTile Title="Snack" FontSize="25" x:Name="hub6"  UpdateInterval="00:00:07" Width="150" Height="150" Margin="-155,-30,5,0" Background="#FF8B5E3B" Tap="hub6_Tap">
                        <telerikPrimitives:RadSlideHubTile.Picture>
                            <Image Source="Images/Category/Snack.jpg" Stretch="UniformToFill"/>
                        </telerikPrimitives:RadSlideHubTile.Picture>
                    </telerikPrimitives:RadSlideHubTile>
                        <telerikPrimitives:RadSlideHubTile Title="Café" FontSize="25" x:Name="hub7"  UpdateInterval="00:00:10" Width="150" Height="150" Margin="-795,300,5,10" Background="#FF8B5E3B" Tap="hub7_Tap">
                        <telerikPrimitives:RadSlideHubTile.Picture>
                            <Image Source="Images/Category/Cafe.jpg" Stretch="UniformToFill"/>
                        </telerikPrimitives:RadSlideHubTile.Picture>
                    </telerikPrimitives:RadSlideHubTile>
                    <telerikPrimitives:RadSlideHubTile Title="Sea Food" FontSize="25" x:Name="hub8"  UpdateInterval="00:00:9" Width="150" Height="150" Margin="-475,300,5,10" Background="#FF8B5E3B" Tap="hub8_Tap">
                        <telerikPrimitives:RadSlideHubTile.Picture>
                            <Image Source="Images/Category/Sea Food.jpg" Stretch="UniformToFill"/>
                        </telerikPrimitives:RadSlideHubTile.Picture>
                    </telerikPrimitives:RadSlideHubTile>
                    <telerikPrimitives:RadSlideHubTile Title="Vegetarian" FontSize="25" x:Name="hub9"  UpdateInterval="00:00:11" Width="150" Height="150" Margin="-155,300,5,10" Background="#FF8B5E3B" Tap="hub9_Tap">
                        <telerikPrimitives:RadSlideHubTile.Picture>
                            <Image Source="Images/Category/Vegetarian.jpg" Stretch="UniformToFill"/>
                        </telerikPrimitives:RadSlideHubTile.Picture>
                    </telerikPrimitives:RadSlideHubTile>
                </StackPanel>
                </ScrollViewer>
            </Controls:PanoramaItem>

