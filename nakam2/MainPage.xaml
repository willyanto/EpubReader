            <Controls:PanoramaItem Header="suggest">
                <ListBox HorizontalAlignment="Stretch" HorizontalContentAlignment="Center">
                    <telerikPrimitives:RadTextBox x:Name="name" Grid.Row="1" Header="name of place"  Watermark="" Width="480" FontSize="25.333" Background="#FFC7C7C7" HeaderTemplate="{StaticResource TextboxHeader}" GotFocus="name_GotFocus"/>
                    <telerikPrimitives:RadTextBox x:Name="address" Header="address" Watermark="" Grid.Row="4" Width="480" Background="#FFC7C7C7" HeaderTemplate="{StaticResource TextboxHeader}" GotFocus="address_GotFocus"/>
                    <telerikInput:RadListPicker x:Name="price" Header="start price" Width="410" BorderThickness="0" Margin="12,12,0,12" Background="White" HeaderTemplate="{StaticResource TextboxHeader}" GotFocus="price_GotFocus">
                        <telerikInput:RadListPicker.ItemStyle>
                            <Style TargetType="telerikInput:RadListPickerItem">
                                <Setter Property="Background" Value="#FFC7C7C7"/>
                            </Style>
                        </telerikInput:RadListPicker.ItemStyle>
                    </telerikInput:RadListPicker>
                    <telerikPrimitives:RadTextBox x:Name="phone" Header="phone" Watermark="" Grid.Row="4" Width="480" Background="#FFC7C7C7" HeaderTemplate="{StaticResource TextboxHeader}" GotFocus="phone_GotFocus"/>
                    <telerikInput:RadListPicker x:Name="category" Header="category" Width="410" BorderThickness="0" Margin="12,12,0,12" PopupHeaderTemplate="{StaticResource PopupHeader}" Background="#FFC7C7C7" HeaderTemplate="{StaticResource TextboxHeader}" BindingValidationError="category_BindingValidationError"/>
                    <telerikPrimitives:RadTextBox x:Name="hour" Header="open hour" Watermark="" Grid.Row="4" Width="480" Background="#FFC7C7C7" HeaderTemplate="{StaticResource TextboxHeader}" GotFocus="hour_GotFocus"/>
                </ListBox>
            </Controls:PanoramaItem>
        </Controls:Panorama>
    </Grid>

