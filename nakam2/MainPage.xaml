            <Controls:PanoramaItem Header="category" Orientation="Horizontal">
                <ScrollViewer>
                <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                    <telerikPrimitives:RadSlideHubTile Title="Indonesian &#xA;Food" FontSize="25" x:Name="hub1" Width="150" Height="150" Margin="0,-350,5,0" Background="#FF8B5E3B" Tap="hub1_Tap">
                        <telerikPrimitives:RadSlideHubTile.Picture>
