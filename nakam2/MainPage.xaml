                        </telerikPrimitives:RadSlideHubTile.Picture>
                    </telerikPrimitives:RadSlideHubTile>
                    <telerikPrimitives:RadSlideHubTile Title="Chinese &#xA;Food" FontSize="25" x:Name="hub2"  UpdateInterval="00:00:04" Width="150" Height="150" Margin="5,-350,5,0" Background="#FF8B5E3B" Tap="hub2_Tap">
